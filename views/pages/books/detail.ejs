<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="booksContainer">

        <div class='bookDetail'>
            <img src=<%=book.image_url %> />
            <h3>
                <%= book.title %>
            </h3>
            <h4>
                <%= book.author %>
            </h4>
            <p>
                <%= book.isbn %>
            </p>
            <p>
                <%= book.description %>
            </p>

        </div>
        <button class="blackButton" id="updateBook">UPDATE</button>
    </div>
    <!-- action="/books/<%= book.id %>?_method=put" -->
    <section id="updateForm" class="<%= book.id %>">
        <form action="/details/<%=book.id%>?_method=put" method="POST">
            <label>Image URL:</label>
            <input type="text" name="image_url" value="<%= book.image_url %>">

            <label>TitLe:</label>
            <input type="text" name="title" value="<%= book.title %>">

            <label>Author:</label>
            <input type="text" name="author" value="<%= book.author %>">

            <label>ISBN:</label>
            <input type="text" name="isbn" value="<%= book.isbn %>">

            <label>Description:</label>
            <input type="text" name="description" value="<%= book.description %>">
            <button id="lastButton" class="blackButton">UPDATE THE BOOK</button>
        </form>

        <form class="deleteForm" action="/deleteBook/<%=book.id%>?_method=delete" method="POST">
            <button class="blackButton" id="deleteBook">DELETE</button>
        </form>
    </section>
    <script>
        'use strict';
        let section = $('#updateForm');
        section.hide();


        $('#updateBook').on('click', () => {
            section.toggle();

        });
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</body>

</html>